	- title = 'Средства ухода | Barbershop'

block content
	include pug/header
	main.main
		h1.main__title
			| Средства ухода

		+breadcrumbs([
			{
				href: 'index.html',
				text: 'Главная'
			},
			{
				href: 'shop.html',
				text: 'Магазин'
			},
			{
				href: 'shop.html#care-catalog',
				text: 'Средства ухода'
			}
		])

		include pug/catalog

		section.filters
